<!DOCTYPE html>
<html>
<head>
  <title>Quiz</title>
  <style>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-image: url('https://t3.ftcdn.net/jpg/03/72/42/02/360_F_372420244_M6e2ejjsJFsnkKjGpldJzBWZGemmDl3P.jpg');
    background-repeat: no-repeat;
    background-size: cover;
  }
  
  .dashboard-container {
    padding: 20px;
    text-align: center;
  }
  
  h1 {
    color: #333;
    margin-bottom: 40px;
    text-align: center;
  }
  
  .section {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    padding: 20px;
    margin: 20px auto;
    max-width: 400px;
    animation-duration: 1s;
    animation-fill-mode: forwards;
  }
  
  .urban-dictionary {
    animation-name: fadeInLeft;
  }
  
  .english-quiz {
    animation-name: fadeInRight;
  }
  
  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  form {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  label {
    margin-bottom: 10px;
    font-weight: bold;
  }
  
  input[type="text"] {
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    margin-bottom: 20px;
    width: 100%;
    max-width: 300px;
  }
  
  button {
    padding: 10px 20px;
    font-size: 16px;
    color: #fff;
    background-color: #007BFF;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  
  button:hover {
    background-color: #0056b3;
  }
  
  a {
    display: inline-block;
    padding: 10px 20px;
    font-size: 16px;
    color: #007BFF;
    text-decoration: none;
    border: 1px solid #007BFF;
    border-radius: 5px;
    transition: background-color 0.3s ease, color 0.3s ease;
  }
  
  a:hover {
    background-color: #007BFF;
    color: #fff;
  }
  </style>
</head>
<body>
  <h1>Quiz</h1>
  <form action="/quiz" method="POST">
    <% questions.forEach((question, index) => { %>
      <div>
        <p><%= index + 1 %>. <%= question.question %></p>
        <% question.options.forEach(option => { %>
          <label>
            <input type="radio" name="answers[<%= index %>]" value="<%= option %>" required>
            <%= option %>
          </label><br>
        <% }) %>
      </div>
    <% }) %>
    <button type="submit">Submit</button>
  </form>
</body>
</html>
